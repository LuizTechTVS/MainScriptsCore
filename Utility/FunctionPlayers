local FunctionesPlayers = {}
local currPlayer = game:GetService("Players").LocalPlayer
local servPlayer = game:GetService("Players")
local RunService = game:GetService("RunService")
local currTeams = game:GetService("Teams")

function FunctionesPlayers.CurrCreate.PlayersService:CreateHitboxes(argstable)
local hitpart = argstable["HitPart"]
local hitsize = argstable["HitSize"]
local transparency = argstable["Transparency"]
local color = argstable["BrickColor"]
local collide = argstable["CanCollide"]

    RunService.Stepped:Connect(function()
    for _, v in next, servPlayer:GetPlayers() do
        if v ~= currPlayer then
            pcall(function()
                    v.Character[hitpart].Size = Vector3.new(hitsize, hitsize, hitsize)
                    v.Character[hitpart].Transparency = transparency
                    v.Character[hitpart].BrickColor = color
                    v.Character[hitpart].CanCollide = collide
            end)
        end
    end
    end)
end
